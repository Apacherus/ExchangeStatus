{
  "name": "Exchange Status Notifier",
  "description": "Notify when Exchange build status changed",
  "version": "0.1",
  "manifest_version": 2,
  "icons": {
    "16": "img/alert-icon.png",
    "48": "img/alert-icon.png",
    "128": "img/alert-icon.png"
  },
  "background": {
    "scripts": [
      "js/jquery-2.1.4.min.js",
      "js/background.js"
    ]
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "tabs",
    "notifications",
    "http://*/",
    "https://*/"
  ],
  "browser_action": {
    "default_icon": {
      "19": "img/alert-icon-gray.png",
      "38": "img/alert-icon-gray.png"
    },
    "default_title": "Exchange Status Notification",
    "default_popup": "popup.html"
  }
}
